---
interface Props {
  readonly prev?: {
    readonly url: string;
    readonly title: string;
  };
  readonly next?: {
    readonly url: string;
    readonly title: string;
  };
}
const { prev, next } = Astro.props;
---

<p id='navigator-title'>The Complete Lojban Language</p>
<div id='navigator'>
  {prev && <a href={prev.url}>← {prev.title}</a>}
  {next && <a href={next.url}>{next.title} →</a>}
</div>
<p><a href='/'>Table of Contents</a></p>
<p>
  <a href='https://mw.lojban.org/papri/The_Complete_Lojban_Language'>
    Book Info Page
  </a>
</p>

<style lang="postcss">
  @reference '../styles/globals.css';

  #navigator-title {
    @apply text-lg font-light;
  }

  #navigator {
    @apply flex max-lg:flex-col max-lg:items-center lg:flex-row lg:justify-center lg:gap-4;
  }

  p {
    @apply text-center;
  }
</style>
