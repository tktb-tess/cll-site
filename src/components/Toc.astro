---
interface H4Content {
  readonly text: string;
  readonly url: string;
}

interface H3Content {
  readonly text: string;
  readonly url: string;
  readonly h4?: H4Content[];
}

interface H2Content {
  readonly text: string;
  readonly url: string;
  readonly h3?: H3Content[];
}

interface Props {
  readonly contents: H2Content[];
}

const { contents } = Astro.props;
---

<h2>Table of Contents</h2>
<details>
  <summary>Open</summary>
  <ul>
    {
      contents.map((content) => (
        <li>
          <p>
            <a href={content.url}>{content.text}</a>
          </p>
          {content.h3 && (
            <ul>
              {content.h3.map((h3) => (
                <li>
                  <p>
                    <a href={h3.url}>{h3.text}</a>
                  </p>
                  {h3.h4 && (
                    <ul>
                      {h3.h4.map((h4) => (
                        <li>
                          <a href={h4.url}>{h4.text}</a>
                        </li>
                      ))}
                    </ul>
                  )}
                </li>
              ))}
            </ul>
          )}
        </li>
      ))
    }
  </ul>
</details>

<style lang="postcss">
  details {
    @apply border border-slate-300 dark:border-slate-500 bg-violet-50 dark:bg-violet-950 rounded;
  }
</style>
